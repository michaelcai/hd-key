{
  "name": "t-hd-key",
  "version": "0.1.5",
  "private": false,
  "description": "Bitcoin BIP32 hierarchical deterministic keys Typescript implemention",
  "main": "build/main/index.js",
  "typings": "build/module/index.d.ts",
  "module": "build/module/index.js",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/michaelcai/hd-key/issues"
  },
  "homepage": "https://github.com/michaelcai/hd-key",
  "keywords": [
    "bitcoin",
    "bip32",
    "bip",
    "key",
    "hierarchical",
    "deterministic",
    "crypto",
    "typescript"
  ],
  "scripts": {
    "info": "npm-scripts-info",
    "dev": "yarn clean && tsc -p tsconfig.watch.json",
    "build": "yarn clean && yarn build:module && yarn build:umd",
    "build:module": "tsc -p tsconfig.json",
    "build:umd": "webpack-cli --config webpack.config.js",
    "analyze": "source-map-explorer build/main/*.*",
    "prettier": "prettier --write",
    "fix": "yarn fix:prettier && yarn fix:tslint",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "yarn clean && yarn test:lint && yarn test:unit",
    "test:lint": "tslint --project .",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "watch": "yarn test:watch",
    "cov": "yarn test:cov && opn coverage/lcov-report/index.html",
    "cov:check": "yarn test:cov",
    "doc": "yarn doc:html && opn build/docs/index.html",
    "doc:html": "typedoc src/ --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "reset": "git clean -dfx && git reset --hard && yarn",
    "clean": "trash build test",
    "all": "yarn reset && yarn test && yarn build && yarn cov:check && yarn doc:html",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "build": "Clean and rebuild the project",
    "fix": "Try to automatically fix any linting problems",
    "test": "Lint and unit test the project",
    "watch": "Watch and rebuild the project on save, then rerun relevant tests",
    "cov": "Rebuild, run tests, then create and open the coverage report",
    "doc": "Generate HTML API documentation and open it in a browser",
    "doc:json": "Generate API documentation in typedoc JSON format",
    "reset": "Delete all untracked files and reset the repo to the last commit"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "coinstring": "^2.3.0",
    "secp256k1": "^3.6.0"
  },
  "devDependencies": {
    "@types/coinstring": "^2.3.0",
    "@types/ecurve": "^1.0.0",
    "@types/jest": "^23.1.0",
    "@types/node": "^10.0.6",
    "@types/secp256k1": "^3.5.0",
    "awesome-typescript-loader": "^5.1.1",
    "axios-mock-adapter": "^1.15.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.0.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-latest": "^6.24.1",
    "bigi": "^1.4.2",
    "codecov": "^3.0.0",
    "conventional-changelog-cli": "^2.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "dts-generator": "^2.1.0",
    "ecurve": "^1.0.6",
    "gh-pages": "^1.0.0",
    "git-cz": "^1.7.1",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^7.1.0",
    "npm-scripts-info": "^0.3.6",
    "nsp": "^3.2.1",
    "opn-cli": "^4.0.0",
    "prettier": "^1.10.2",
    "source-map-explorer": "^1.5.0",
    "standard-version": "^4.0.0",
    "trash-cli": "^1.4.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-immutable": "^5.0.1",
    "typedoc": "^0.11.1",
    "typescript": "^3.2.2",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.12.0",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.1.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier",
      "git add"
    ]
  },
  "greenkeeper": {
    "ignore": [
      "@types/node"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{ts}"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(j|t)s?(x)",
      "<rootDir>/src/**/?(*.)(test|spec).(j|t)s?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\](?!lodash-es)"
    ],
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node",
      "mjs"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.json"
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
